{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "skipLibCheck": true
  },
  "include": [
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}